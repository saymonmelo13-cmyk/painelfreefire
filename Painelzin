    <button onclick="sortear()">🎲 Sortear</button>
    <div class="resultado" id="resultado"></div>
  </div>  <script>
    function sortear() {
      const itens = [
        "🔹 350 Diamantes",
        "🎭 Skin Exclusiva",
        "⚡ Item Raro",
        "🥷 Naruto",
        "🔥 Itachi",
        "🐍 Orochimaru",
        "🌀 Sasuke",
        "🎁 Surpresa Misteriosa",
        "👑 Mestre Kame"
      ];
      const sorteado = itens[Math.floor(Math.random() * itens.length)];
      const id = document.getElementById("idJogador").value;
      if(id.trim() === ""){
        document.getElementById("resultado").innerText = "⚠️ Digite seu ID antes de sortear!";
      } else {
        document.getElementById("resultado").innerText = `🎉 Jogador ${id}, você ganhou: ${sorteado}`;
      }
    }
  </script></body>
